{
  "$defs": {
    "system-list": {
      "type": "string",
      "pattern": "^([a-z][a-z0-9]*(_[a-z0-9]+)*\\n)+$"
    },
    "system": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(_[a-z0-9]+)*$"
    },
    "system-2": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(_[a-z0-9]+)*\\n([a-z][a-z0-9]*(_[a-z0-9]+)*\\n)+$"
    },
    "ru": {
      "type": "string",
      "pattern": "^([А-яЁёA-z0-9]+(-[А-яЁёA-z0-9]+)*)( [А-яЁёA-z0-9]+(-[А-яЁёA-z0-9]+)*)*$",
      "examples": ["название"]
    },
    "en": {
      "type": "string",
      "pattern": "^([A-z0-9]+(-[A-z0-9]+)*)( [A-z0-9]+(-[A-z0-9]+)*)*$",
      "examples": ["name"]
    },
    "ru-text": {
      "type": "string",
      "pattern": "^([+()А-яЁёA-z0-9]+(-[+()А-яЁёA-z0-9]+)*)((\\.|,|;)? [+()А-яЁёA-z0-9]+(-[+()А-яЁёA-z0-9]+)*)*$",
      "examples": ["текст"]
    },
    "en-text": {
      "type": "string",
      "pattern": "^([+()A-z0-9]+(-[+()A-z0-9]+)*)((\\.|,|;)? [+()A-z0-9]+(-[+()A-z0-9]+)*)*$",
      "examples": ["text"]
    },
    "ru-set": {
      "type": "string",
      "pattern": "^(([А-яЁёA-z0-9]+(-[А-яЁёA-z0-9]+)*)( [А-яЁёA-z0-9]+(-[А-яЁёA-z0-9]+)*)*)( \\| ([А-яЁёA-z0-9]+(-[А-яЁёA-z0-9]+)*)( [А-яЁёA-z0-9]+(-[А-яЁёA-z0-9]+)*)*)*$",
      "examples": ["название | синоним"]
    },
    "en-set": {
      "type": "string",
      "pattern": "^(([A-z0-9]+(-[A-z0-9]+)*)( [A-z0-9]+(-[A-z0-9]+)*)*)( \\| ([A-z0-9]+(-[A-z0-9]+)*)( [A-z0-9]+(-[A-z0-9]+)*)*)*$",
      "examples": ["name | synonym"]
    },
    "ru-array": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ru"
      },
      "examples": [["название", "синоним"]]
    },
    "en-array": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ru"
      },
      "examples": [["name", "synonym"]]
    },
    "ru-text-array": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ru-text"
      },
      "examples": [["текст", "текст"]]
    },
    "en-text-array": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ru-text"
      },
      "examples": [["text", "text"]]
    },
    "ru-set+array": {
      "oneOf": [{ "$ref": "#/$defs/ru-set" }, { "$ref": "#/$defs/ru-array" }]
    },
    "en-set+array": {
      "oneOf": [{ "$ref": "#/$defs/en-set" }, { "$ref": "#/$defs/en-array" }]
    },
    "ru-text+array": {
      "oneOf": [{ "$ref": "#/$defs/ru-text" }, { "$ref": "#/$defs/ru-text-array", "type": "array", "minItems": 2 }]
    },
    "en-text+array": {
      "oneOf": [{ "$ref": "#/$defs/en-text" }, { "$ref": "#/$defs/en-text-array", "type": "array", "minItems": 2 }]
    },
    "nodes": {
      "type": "object",
      "properties": {
        "concepts": {
          "type": "string",
          "$ref": "#/$defs/system-list",
          "title": "List of concepts",
          "description": "List of concepts"
        },
        "nrels": {
          "type": "string",
          "$ref": "#/$defs/system-list",
          "title": "List of norole relations",
          "description": "List of norole relations"
        },
        "rrels": {
          "type": "string",
          "$ref": "#/$defs/system-list",
          "title": "List of role relations",
          "description": "List of role relations"
        }
      },
      "additionalProperties": false,
      "examples": [
        {
          "concepts": "|\n    used_concept",
          "nrels": "|\n    used_nrel",
          "rrels": "|\n    used_rrel"
        }
      ]
    }
  }
}
